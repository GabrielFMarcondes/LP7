#include <stdio.h>

int main() {
    
    char modo;

    while (modo != '4') {
        printf("1. Secar; \n2. Enxaguar e Secar; \n3. Lavar, Enxaguar e Secar; \n4. Encerrar progrma de lavagem. \nDigite 1 dos modos: ");

        modo = getchar();
        getchar();

        switch (modo) {
            case '3': 
            printf ("\nLavando...");
            case '2':
            printf ("\nEnxaguando...");
            case '1':
            printf ("\nSecando...");
            printf ("\nfinalizado.\n\n");
        }
    }
       printf ("\nMÃ¡quina desligada!");         
return 0;
}
