#include <stdio.h>

int main() {

    int secar() {
    printf("Secando...\n\n");
}
    int enxaguar_e_secar() {
    printf("Enxaguando...\n");
    printf("Secando...\n\n");
}
    int lavar_enxaguar_e_secar() {
    printf("Lavando...\n");
    printf("Enxaguando...\n");
    printf("Secando...\n\n");
}
    int modo;

    while (1) {
        printf("1. Secar\n");
        printf("2. Enxaguar e Secar\n");
        printf("3. Lavar, Enxaguar e Secar\n");
        printf("4. Desligar\n");
        printf("Escolha um dos modos acima: ");
        scanf ("%d", &modo);

        if (modo == 4) {
            printf ("MÃ¡quina desligada!");
            break;
        }

        switch(modo) {
            case 1:
                secar();
                break;
            case 2:
                enxaguar_e_secar();
                break;
            case 3:
                lavar_enxaguar_e_secar();
                break;
        }
    }

    return 0;
}
